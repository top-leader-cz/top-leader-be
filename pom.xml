            <!--					</configFiles>-->

            <!--					<version>GCLOUD_CONFIG.*</version>-->
            <!--					<projectId>topleader-394306</projectId>-->
            <!--				</configuration>-->
            <!--			</plugin>-->
        </plugins>
    </build>

</project>

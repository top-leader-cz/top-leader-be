<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" optional="true"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" optional="true"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{username}] %-5level %logger{36} - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <springProfile name="qa | prod">
        <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <include resource="org/springframework/cloud/gcp/logging/logback-json-appender.xml" optional="true"/>

            <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
                <layout class="com.google.cloud.spring.logging.StackdriverJsonLayout">
                    <includeLevel>true</includeLevel>
                    <includeThreadName>true</includeThreadName>
                    <includeMDC>true</includeMDC>
                    <includeLoggerName>true</includeLoggerName>
                    <customJson>
                        {"username": "%X{username}"}
                    </customJson>
                </layout>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
        </root>
    </springProfile>

    <springProfile name="default | test">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <logger name="org.springframework.web" level="INFO"/>

</configuration>


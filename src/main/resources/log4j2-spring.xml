<?xml version="1.0" encoding="UTF-8"?>
<!-- Log4j2 with JSON-like PatternLayout for GCP (native-image compatible) -->
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{username}] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- Local development: Plain text logs -->
        <Console name="CONSOLE_TEXT" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- GCP (prod/qa): JSON logs with severity mapping for Cloud Logging -->
        <Console name="CONSOLE_JSON" target="SYSTEM_OUT">
            <!-- Use PatternLayout with JSON-like output that GCP can parse -->
            <PatternLayout>
                <pattern>{"severity":"%level","message":"%enc{%message}{JSON}","logger":"%logger","thread":"%thread","timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}","username":"%X{username}"%notEmpty{,"stacktrace":"%enc{%xThrowable}{JSON}"}}%n</pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <!-- Use ${env:GCP_JSON_LOGS} to switch between JSON (GCP) and TEXT (local) -->
            <AppenderRef ref="${env:GCP_JSON_LOGS:-CONSOLE_TEXT}"/>
        </Root>
        <Logger name="org.springframework.web" level="INFO"/>
    </Loggers>
</Configuration>
